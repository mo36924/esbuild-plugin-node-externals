  ],
  "scripts": {
    "build": "run-s clean format build:* test",
    "build:rollup": "rollup -c --configPlugin @mo36924/rollup-plugin-bundle-config",
    "clean": "del dist",
    "format": "run-s format:*",
    "format:sort-package-json": "sort-package-json",
    "format:prettier": "prettier --write .",
    "test": "run-s test:*",
    "test:jest": "jest",
    "test:format": "prettier --write **/*.test.*",
    "prepublishOnly": "run-s build"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "esbuild-jest",
        {
          "sourcemap": true
        }
      ]
    }
  },
  "devDependencies": {
    "@mo36924/rollup-plugin-bundle-config": "^0.0.1",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/node": "^16.11.11",
    "del-cli": "^4.0.1",
    "esbuild": "^0.14.2",
    "esbuild-jest": "^0.5.0",
    "jest": "^27.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rollup": "^2.60.2",
    "rollup-plugin-dts": "^4.0.1",
    "sort-package-json": "^1.53.1",
    "typescript": "^4.5.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
